{
  "name": "crypto-scanner",
  "version": "5.6.0",
  "description": "Crypto Scanner is a privacy-oriented tool used to track ETH and token balances across multiple addresses and groups (ledgers)",
  "author": "Leonid Beder",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "bin": {
    "crypto-scanner": "./dist/index.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "cli": "pnpm start --help",
    "show": "pnpm start show",
    "scan": "pnpm start scan",
    "change-password": "pnpm start change-password",
    "export-db": "pnpm start export-db",
    "import-db": "pnpm start import-db",
    "add-addresses": "pnpm start add-addresses",
    "remove-addresses": "pnpm start remove-addresses",
    "add-token": "pnpm start add-token",
    "remove-token": "pnpm start remove-token",
    "add-asset": "pnpm start add-asset",
    "update-asset": "pnpm start update-asset",
    "remove-asset": "pnpm start remove-asset",
    "lint": "pnpm eslint src",
    "format": "prettier --check --write src/**/* --config .prettierrc",
    "prepare": "pnpm snyk-protect",
    "build": "rm -rf dist && tsc --build tsconfig.json",
    "release": "pnpm build && pnpm prepare",
    "update-tokens": "ts-node src/scripts/tokens.ts",
    "snyk-protect": "snyk-protect",
    "snyk-test": "snyk test"
  },
  "devDependencies": {
    "@snyk/protect": "^1.1168.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/cli-progress": "^3.11.0",
    "@types/cli-table": "^0.3.1",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.2.5",
    "@types/node-fetch": "^2.6.4",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "chalk": "^4.1.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "node-fetch": "2",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "cli-table": "^0.3.11",
    "coingecko-api-v3": "^0.0.26",
    "decimal.js": "^10.4.3",
    "ethers": "^6.4.0",
    "inquirer": "^8.1.0",
    "lodash": "^4.17.21",
    "yargs": "^17.7.2"
  }
}
