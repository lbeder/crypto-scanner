    "cli-table": "^0.3.11",
    "coingecko-api-v3": "^0.0.23",
    "decimal.js": "^10.4.3",
    "ethers": "^6.3.0",
    "inquirer": "^8.1.0",
    "lodash": "^4.17.21",
    "yargs": "^17.7.1"
  },
  "lavamoat": {
    "allowScripts": {
