{
  "name": "crypto-scanner",
  "version": "5.8.0",
  "description": "Crypto Scanner is a privacy-oriented tool used to track ETH and token balances across multiple addresses and groups (ledgers)",
  "author": "Leonid Beder",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "cli": "pnpm start --help",
    "show": "pnpm start show",
    "scan": "pnpm start scan",
    "change-password": "pnpm start change-password",
    "export-db": "pnpm start export-db",
    "import-db": "pnpm start import-db",
    "add-addresses": "pnpm start add-addresses",
    "remove-addresses": "pnpm start remove-addresses",
    "add-token": "pnpm start add-token",
    "remove-token": "pnpm start remove-token",
    "add-asset": "pnpm start add-asset",
    "update-asset": "pnpm start update-asset",
    "remove-asset": "pnpm start remove-asset",
    "lint": "pnpm eslint src",
    "format": "prettier --check --write src/**/* --config .prettierrc",
    "build": "rm -rf dist && tsc --build tsconfig.json && pkg dist/index.js",
    "build:win-x64": "pnpm build -t node16-win-x64 -o ./build/win-x64/crypto-scanner.exe",
    "build:linux-x64": "pnpm build -t node16-linux-x64 -o ./build/linux-x64/crypto-scanner",
    "build:macos-x64": "pnpm build -t node16-macos-x64 -o ./build/macos-x64/crypto-scanner",
    "build:macos-arm64": "pnpm build -t node16-macos-arm64 -o ./build/macos-arm64/crypto-scanner",
    "build:all": "pnpm build:win-x64 && pnpm build:linux-x64 && pnpm build:macos-x64 && pnpm build:macos-arm64",
    "prepare": "pnpm snyk-protect",
    "release": "pnpm build && pnpm prepare",
    "update-tokens": "ts-node src/scripts/tokens.ts",
    "snyk-protect": "snyk-protect",
    "snyk-test": "snyk test"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@snyk/protect": "^1.1237.0",
    "@types/cli-progress": "^3.11.4",
    "@types/cli-table": "^0.3.3",
    "@types/inquirer": "^9.0.6",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.9",
    "@types/yargs": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "prettier-package-json": "^2.8.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "cli-table": "^0.3.11",
    "coingecko-api-v3": "^0.0.29",
    "decimal.js": "^10.4.3",
    "ethers": "^6.8.0",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "yargs": "^17.7.2"
  }
}
