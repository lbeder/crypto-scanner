    "show": "yarn start show",
    "query": "yarn start query",
    "change-password": "yarn start change-password",
    "add-addresses": "yarn start add-addresses",
    "remove-addresses": "yarn start remove-addresses",
    "add-token": "yarn start add-token",
    "remove-token": "yarn start remove-token",
    "add-asset": "yarn start add-asset",
    "update-asset": "yarn start update-asset",
    "remove-asset": "yarn start remove-asset",
    "lint": "yarn eslint src",
