    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "@types/underscore": "^1.11.4",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.57.1",
    "chalk": "^4.1.2",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
