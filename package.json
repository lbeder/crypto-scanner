    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "prettier-package-json": "^2.8.0",
    "prettier-tslint": "^0.4.2",
    "prettier": "^2.8.7",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
